@model IEnumerable<Yintai.Hangzhou.Data.Models.ProductUploadJob>
@using Yintai.Hangzhou.Cms.WebSiteCoreV1.Util
@{
    ViewBag.Title = "批量导入历史";
}
@section PageBread
{
    <ul class="breadcrumb">
        <li>@Html.ActionLink("商品管理", "Index", "Product")<span class="divider">/</span></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
}
<div class="span5">
<legend>@ViewBag.Title</legend>
<table class="table table-bordered table-condensed table-striped">
    <tr>
        <th>Id
        </th>
        <th>操作日期
        </th>
        <th>状态</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.JobId)
            </td>
            <td>
                @Html.DisplayFor(model => item.InDate)
            </td>
             <td>
                 <p>@item.Status.ToFriendlyString()</p> 
            </td>
            <td>
                <div class="dropdown">
                <a href="#" class="dropdown-toggle btn" data-toggle="dropdown">编辑<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @if (item.Status != Yintai.Hangzhou.Data.Models.ProUploadStatus.ProductsOnLive)
                    {
                     <li>@Html.ActionLink("Edit", "Display", "ProBulkUpload", new { id = item.JobId }, null)</li>
                     <li>@Html.ActionLink("Delete", "Delete", "ProBulkUpload", new { id = item.JobId }, null)</li>
                    }
                    else
                    {
                     <li>@Html.ActionLink("详情", "Display", "ProBulkUpload", new { id = item.JobId }, null)</li>    
                    }
                </ul>
                </div>


            </td>
        </tr>
    }

</table>
</div>
