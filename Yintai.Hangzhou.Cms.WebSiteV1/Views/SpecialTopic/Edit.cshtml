        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Status, ((DataStatus)Model.Status).ToSelectList())
            @Html.ValidationMessageFor(model => model.Status)
        </div>

        <div>
            @if (this.Model.Resources != null && Model.Resources.Count > 0)
            {
                <table style="border: 0;">
                    @foreach (var re in Model.Resources)
                    {
                        <tr>
                            <td>
                                @if (re.Type == (int)Yintai.Architecture.Common.Models.ResourceType.Image)
                                {
                        
                                    <img src="@String.Concat(re.Domain, re.Name, "_630x0.jpg")" alt="630x0" />
                                }
                            </td>
                            <td>

                                @Html.ActionLink2("Del", "Delete", "Resource", new { id = re.Id }, new { target = "_blank" })
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>@Html.ActionLink2("AddRrsource", "Create", "Resource", new
                                {
                                    SourceId = this.Model.Id,
                                    SourceType = (int)Yintai.Hangzhou.Model.Enums.SourceType.SpecialTopic
                                }, null)</td>
                        </tr>
                    }
                </table>
            }
        </div>

