@{
    ViewBag.Title = "商品管理";
    var controller = (Yintai.Hangzhou.Cms.WebSiteCoreV1.Controllers.UserController)ViewContext.Controller;
    bool canBulkPublish = controller.HasRightForAction("ProBulkUpload","Display");
}

<div class="span4">
    <h2>新建商品</h2>
    <p>创建单个商品.</p>
    <p>@Html.ActionLink2("创建","Create",null,new {@class = "btn"})</p>
</div>
@if (canBulkPublish) {
<div class="span4">
    <h2>批量上传</h2>
    <p>批量导入商品信息，同时也导入商品图片信息。 </p>
    <p><span>@Html.ActionLink2("上传","Display","ProBulkUpload",null,new {@class = "btn"})</span>
        <span>@Html.ActionLink2("历史","List","ProBulkUpload",null,new {@class = "btn"})</span>
    </p>
</div>
}
<div class="span4">
    <h2>商品查询</h2>
    <p>查询商品信息。 </p>
    <p>@Html.ActionLink2("查询","List",null,new {@class = "btn"})</p>
</div>

