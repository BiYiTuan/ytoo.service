<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Bootstrap/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap/bootstrap-responsive.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui-timepicker-addon.css")" rel="stylesheet" type="text/css"/>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
     <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
     <script src="@Url.Content("~/Scripts/website.js")" type="text/javascript"></script>
    @RenderSection("HeaderScripts",false)
    <style type="text/css">
        body {
            padding-top: 90px;
            padding-bottom: 40px;
        }
    </style>
    @RenderSection("HeaderStyles",false)
    @RenderSection("PageCssSection", false)
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">CMS V1.0</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("商品管理", "Index", "Product")</li>
                        <li>@Html.ActionLink("Brand", "Index", "Brand")</li>
                        <li>@Html.ActionLink("Comment", "Index", "Comment")</li>
                        <li>@Html.ActionLink("Promotion", "Index", "Promotion")</li>
                        <li>@Html.ActionLink("Store", "Index", "Store")</li>
                        <li>@Html.ActionLink("Tag", "Index", "Tag")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">更多 <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                                <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>
                                <li>@Html.ActionLink("Point", "Index", "Point")</li>
                                <li>@Html.ActionLink("Resource", "Index", "Resource")</li>
                                <li>@Html.ActionLink("SpecialTopic", "Index", "SpecialTopic")</li>
                            </ul>
                        </li>

                    </ul>
                </div>
                @Html.Partial("_LogOnPartial")

                <!--/.nav-collapse -->
            </div>

        </div>
        <div class="container">@RenderSection("PageBread", false)</div>
    </div>

    <div class="container">

        <div class="row">
            @RenderBody()

        </div>
        @RenderSection("PageJsSection", false)
    </div>

</body>
</html>
