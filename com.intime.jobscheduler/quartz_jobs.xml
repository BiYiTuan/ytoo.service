<?xml version="1.0" encoding="UTF-8"?>

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 				version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>

    <job>
      <name>Push2aws</name>
      <group>Fashion</group>
      <description>push production, promotion info to aws daily at midnight</description>
      <job-type>com.intime.jobscheduler.Job.Push2awsJob, com.intime.jobscheduler</job-type>
      <durable>true</durable>
      <recover>false</recover>
      <job-data-map>
        <entry>
          <key>eshost</key>
          <value>ec2-46-137-197-113.ap-southeast-1.compute.amazonaws.com</value>
        </entry>
        <entry>
          <key>defaultindex</key>
          <value>intime</value>
        </entry>
        <entry>
          <key>benchdate</key>
          <value>2013/2/1</value>
        </entry>
      </job-data-map>
    </job>

    <trigger>
      <cron>
        <name>MidNight4AWS</name>
        <group>Fashion</group>
        <description>every midnight 0 am trigger</description>
        <job-name>Push2aws</job-name>
        <job-group>Fashion</job-group>
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <cron-expression>1 * * * * ?</cron-expression>
      </cron>
    </trigger>

  </schedule>

</job-scheduling-data>
